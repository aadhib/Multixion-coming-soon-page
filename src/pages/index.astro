---
import json from "content.json";
import LinkExternal from "components/LinkExternal.astro";
import LayoutMain from "../layouts/LayoutMain.astro";

const callToActionHref = `mailto:${json.meta.email}`;
---

<LayoutMain>
  <section class="section-hero">
    <h1>{json.section_hero.title}</h1>
    <p>{json.section_hero.description}</p>
  </section>

  <section class="section-contact">
    <h2>{json.section_contact.title}</h2>
    <p>{json.section_contact.description}</p>

    <div>
      <LinkExternal href={callToActionHref}>
        <>{json.section_contact.call_to_action}</>
      </LinkExternal>
    </div>
  </section>
</LayoutMain>

<style>
  section {
    @apply flex flex-col;
    @apply gap-2 md:gap-4 lg:gap-6;
  }

  .section-hero > h1 {
    @apply font-900;
    @apply text-3xl md:text-5xl lg:text-7xl;
  }

  .section-hero > p {
    @apply max-w-4xl;
    @apply text-base md:text-lg lg:text-xl;
  }

  .section-contact > h2 {
    @apply font-900;
    @apply text-2xl md:text-4xl lg:text-5xl;
  }

  .section-contact > p {
    @apply max-w-4xl;
    @apply text-base md:text-lg lg:text-xl;
  }
</style>
